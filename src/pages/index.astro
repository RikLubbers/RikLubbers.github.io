---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { ArrowRight, Calendar } from 'lucide-react';
import { SITE } from '../config';
import avatarImage from '../assets/avatar-real.jpg'; // Import the avatar


---

<Layout title="Home" footer={false}>
  <!-- Hero Section -->
  <section class="relative h-[calc(100vh-4rem)] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      {SITE.hero.image ? (
        <Image 
          class="w-full h-full object-cover" 
          src={SITE.hero.image} 
          alt={SITE.hero.title}
          loading="eager"
          fetchpriority="high"
          decoding="sync"
          quality={60}
          format="webp"
          widths={[640, 1024, 1920]}
          sizes="100vw"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-gray-900 to-gray-800"></div>
      )}
      <!-- Dark Gradient Overlay for Readability -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/50 to-transparent"></div>
      <!-- Bottom Scroll Cue Gradient -->
      <div class="absolute inset-x-0 bottom-0 h-32 bg-gradient-to-t from-gray-900 to-transparent pointer-events-none z-10"></div>
      <!-- Subtle Texture (CSS only) -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 32px 32px;"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full h-full flex items-center">
      <div class="flex flex-col md:flex-row justify-between w-full gap-12 h-full">
        <!-- Text Content - Centered Vertically -->
        <div class="max-w-3xl text-center md:text-left flex flex-col justify-center z-20">
          <h1 class="text-5xl font-extrabold text-white sm:text-6xl md:text-7xl mb-2 drop-shadow-lg leading-tight">
            <span class="block xl:inline">{SITE.hero.title}</span>
            <a href="https://orcid.org/0000-0002-2772-1524" target="_blank" rel="noopener noreferrer" class="inline-block ml-0 align-middle hover:opacity-80 transition-opacity" aria-label="ORCID Profile (opens in new tab)">
              <svg width="28" height="28" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg" class="inline-block" aria-hidden="true">
                <path d="M256 128c0 70.7-57.3 128-128 128S0 198.7 0 128 57.3 0 128 0s128 57.3 128 128z" fill="#A6CE39"/>
                <path d="M86.3 186.2H70.9V79.1h15.4v107.1zM108.9 79.1h41.6c39.6 0 57 28.3 57 53.6 0 27.5-21.5 53.6-56.8 53.6h-41.8V79.1zm15.4 93.3h24.5c34.9 0 42.9-26.5 42.9-39.7C191.7 111.2 178 93 148 93h-23.7v79.4zM71.3 54.8c0-5.2 4.2-9.4 9.4-9.4s9.4 4.2 9.4 9.4c0 5.2-4.2 9.4-9.4 9.4s-9.4-4.2-9.4-9.4z" fill="#fff"/>
              </svg>
            </a>
          </h1>
          <div class="text-xl sm:text-2xl text-blue-200 font-medium mb-6 drop-shadow-md">
            {SITE.university}
          </div>
          <p class="mt-4 text-xl text-gray-300 sm:max-w-2xl md:text-2xl drop-shadow-md">
            {SITE.hero.subtitle}
          </p>
          <div class="mt-10 flex flex-wrap gap-4 justify-center md:justify-start">
            <a href="/publications" class="flex items-center justify-center px-6 py-3 border border-transparent text-lg font-medium rounded-full text-black bg-white hover:bg-gray-100 transition-all duration-300 shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]">
              Publications
            </a>
            <a href="/cv" class="flex items-center justify-center px-6 py-3 border-2 border-white/30 text-lg font-medium rounded-full text-white hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
              View CV
            </a>
          </div>
        </div>

        <!-- Animated Profile Picture - Positioned at top 1/3 (approx 33% down) -->
        <div class="hidden md:flex shrink-0 animate-fly-in-right opacity-0 items-start pt-[15vh] lg:pt-[20vh]" style="animation-fill-mode: forwards;">
          <div class="relative w-64 h-80 lg:w-80 lg:h-96 rounded-[50%] overflow-hidden border-4 border-white/10 shadow-[0_35px_60px_-15px_rgba(0,0,0,0.8)] backdrop-blur-sm transform transition-transform hover:scale-[1.02]">
             <Image 
               src={avatarImage} 
               alt={SITE.author}
               class="w-full h-full object-cover"
               width={400}
               height={500}
             />
             <!-- Reflection/Gloss Effect -->
             <div class="absolute inset-0 bg-gradient-to-tr from-white/20 via-transparent to-transparent pointer-events-none"></div>
             <!-- Inner Shadow for Depth -->
             <div class="absolute inset-0 shadow-[inset_0_0_40px_rgba(0,0,0,0.5)] rounded-[50%] pointer-events-none"></div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <style>
    @keyframes flyInRight {
      0% {
        opacity: 0;
        transform: translateX(100px) scale(0.9);
      }
      100% {
        opacity: 1;
        transform: translateX(0) scale(1);
      }
    }
    .animate-fly-in-right {
      animation: flyInRight 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.5s forwards; /* 0.5s delay */
    }
  </style>
</Layout>
